{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021", // Target modern Node.js versions
    "lib": [
      "ES2021"
    ],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}