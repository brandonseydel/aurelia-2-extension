{
  "comments": {
    "blockComment": [ "<!--", "-->" ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"] 
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    // Add the Aurelia interpolation pair
    { "open": "${", "close": "}" } 
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
        "start": "^\\s*<!--\\s*#region\\b.*-->",
        "end": "^\\s*<!--\\s*#endregion\\b.*-->"
    }
  }
} 