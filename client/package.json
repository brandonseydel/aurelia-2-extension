{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "./out/extension.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src --ext .ts,.tsx",
    "postinstall": "cd ../server && npm install && cd ../client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "vscode": "^1.80.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.1",
    "vscode-languageclient": "^9.0.1"
  },
  "activationEvents": [
    "onLanguage:html"
  ],
  "contributes": {
    "languages": [
      {
        "id": "html",
        "aliases": ["Aurelia HTML", "html"],
        "extensions": [".html"]
      }
    ],
    "grammars": [
      {
        "language": "html",
        "scopeName": "text.html.aurelia",
        "path": "./syntaxes/aurelia-html.tmLanguage.json",
        "injectTo": ["text.html"]
      }
    ],
    "configuration": {
      "title": "Aurelia",
      "properties": {
      }
    }
  }
}
