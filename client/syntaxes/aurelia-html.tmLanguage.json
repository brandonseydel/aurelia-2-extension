{
    "scopeName": "text.html.aurelia",
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "begin": "\\$\\{",
            "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.aurelia" }
            },
            "end": "\\}",
            "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.aurelia" }
            },
            "name": "meta.interpolation.aurelia",
            "patterns": [
                {
                    "include": "source.ts"
                }
            ]
        }
    ],
    "injectionSelector": "L:text.html - (meta.tag), L:text.html meta.tag - (punctuation.definition.tag.begin, punctuation.definition.tag.end)"
}